# node config

# 日志配置
log:
# 模块名称
  module: xchain
# 日志目录
  filepath: logs
# 日志文件名
  filename: xchain
  fmt: logfmt
# 是否打印命令行工具端口
  console: true
# 日志等级
  level : debug

# RPC 服务暴露的端口
tcpServer:
  port: :37106

# 区块链节点配置
p2p:
  # 节点列表
  p2p_list:
    - 127.0.0.1:37103
  # RPC 客户端访问超时时间
  timeout: 1

miner:
# 是否是主节点
  master: true
# 密钥存储路径
  keypath: ./data/keys

# 数据存储路径
datapath: ./data/blockchain

utxo:
# utxo的内存LRUCache大小，默认5000个address
  cachesize: 5000
# GenerateTx的临时锁定期限，默认是60秒
  tmplockSeconds: 60
